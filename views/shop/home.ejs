<%- include ../partials/header %> <%- include ../partials/categories-navbar%>
<div id="carouselC" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselC" data-slide-to="0" class="active"></li>
    <li data-target="#carouselC" data-slide-to="1"></li>
    <li data-target="#carouselC" data-slide-to="2"></li>
    <li data-target="#carouselC" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 h-25" src="images/slide1.jpg" alt="First slide"/>
      <div class="carousel-caption">
        <h3 >Fresh Vegetabels</h3>
        <p>Fresh Vegetabels pulled straight from farms to your doorstep.</p>
       <p><a href="/products/vegetables" class="btn btn-outline-light">Shop now</a></p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 h-25" src="images/slide2.jpg" alt="Second slide"/>      
      <div class="carousel-caption">
        <h3>Fresh and Juicy Fruits</h3>
        <p>Hand picked fresh fruits to your doorstep.</p>
       <p><a href="/products/fruits" class="btn btn-outline-light">Shop now</a></p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 h-25" src="images/slide3.jpg" alt="Third slide"/>      
      <div class="carousel-caption">
        <h3>Your favourite dairy brands</h3>
        <p>Can't run an errand? We got you covered with your favourite brands.</p>
       <p><a href="/products/dairy" class="btn btn-outline-light">Shop now</a></p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 h-25" src="images/slide4.jpg" alt="Fourth slide"/>      
      <div class="carousel-caption">
        <h3>Fresh and Organic Poultry</h3>
        <p>Antibiotic residue free chicken and organic poultry products.</p>
       <p><a href="/products/meat" class="btn btn-outline-light">Shop now</a></p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselC" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselC" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<hr class="gradient-style" />
<!-- category -->
<div class="container">
  <h3 class="text-center mb-3 mt-4">Store's Categories</h3>
  <% if (categories) { %>
  <div class="row text-center">
    <% for(let i=0; i<4; i++){ %>
    <div class="col-lg-2 text-center ml-2">
      <a class="title-link" href="/products/<%=categories[i].slug%>">
        <img src="images/dept<%=i%>.webp" alt="category" class="circle-img" />
        <h4 class="mb-3 mt-3"><%=categories[i].title%></h4>
      </a>
    </div>
    <%} %>
    <div class="col-lg-2 text-center ml-2">
    <div>
      <a class="title-link" href="/products/">
        <img src="images/allprods.png" alt="category" class="circle-img" /> </a>
        <h4 class="mb-3 mt-3">All Products</h4>
    </div>
  </div>
  </div>
  <%}%>
</div>
